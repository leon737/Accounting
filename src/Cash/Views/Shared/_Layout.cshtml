@using System.Reflection
@using Cash.Web
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/DevExtremeBundle")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/ko")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/DevExtremeBundle")
    @Scripts.Render("~/bundles/require")
</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Финансы", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Планы счетов", "Index", "Chart", new {area="Cash"}, null)</li>
                @if (ViewBag.Project != null)
                {
                    <li>@Html.ActionLink("Счета", "Index", "Account", new { area="Cash", chart = ViewBag.Chart.Id}, null)</li>
                    <li>@*@Html.ActionLink("Материалы / ресурсы", "Index", "Resources", new { project = ViewBag.Project.Code }, null)*@</li>
                }
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</div>
<div class="container body-content" style="width: 100%; margin-left: 10px; margin-right: 10px;">
    @RenderBody()
    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year - Финансы - v.@typeof(MvcApplication).Assembly.GetName().Version</p>
    </footer>
</div>

@RenderSection("scripts", required: false)
</body>
</html>

